{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./packages",
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "es6",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020", "dom", "webworker"],
    "skipLibCheck": true
  },
  "include": ["./packages/**/*"],
  "exclude": [
    "./packages/openneuro-app/src/assets/**/*",
    "./packages/openneuro-app/dist",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules",
    "**/__mocks__"
  ]
}
