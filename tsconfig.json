{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./packages",
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "es2020",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020", "dom", "webworker"],
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "openneuro-app": ["packages/openneuro-app"],
      "openneuro-cli": ["packages/openneuro-cli"],
      "openneuro-client": ["packages/openneuro-client"],
      "openneuro-indexer": ["packages/openneuro-indexer"],
      "openneuro-server": ["packages/openneuro-server"]
    }
  },
  "exclude": [
    "./packages/openneuro-app/src/assets",
    "**/dist/*",
    "node_modules",
    "**/__mocks__/*",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "coverage"
  ],
  "references": [
    { "path": "./packages/openneuro-app" },
    { "path": "./packages/openneuro-cli" },
    { "path": "./packages/openneuro-client" },
    { "path": "./packages/openneuro-indexer" },
    { "path": "./packages/openneuro-server" }
  ]
}
